{% extends 'base.html.twig' %}

{% block title %}Films{% endblock %}

{% block body %}
    <h1>Films</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ film.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ film.name }}</td>
            </tr>
            <tr>
                <th>Release_date</th>
                <td>{{ film.releaseDate ? film.releaseDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Version</th>
                <td>{{ film.version }}</td>
            </tr>
            <tr>
                <th>Director</th>
                <td>{{ film.director }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ film.duration }}</td>
            </tr>
            <tr>
                <th>Synopsis</th>
                <td>{{ film.synopsis }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ film.slug }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_films_index') }}">back to list</a>

    <a href="{{ path('app_films_edit', {'id': film.id}) }}">edit</a>

    {{ include('films/_delete_form.html.twig') }}
{% endblock %}
